{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "css.customData": [".vscode/tailwind.json"],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "astro", // Enable .astro
    "typescript" // Enable .ts
  ],
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  }
}
